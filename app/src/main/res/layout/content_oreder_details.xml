<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_order_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/ten"
    android:paddingTop="@dimen/ten"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.panamon.paccozz.activity.OrderActivity"
    tools:showIn="@layout/activity_order_details">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:cardBackgroundColor="#fff"
            app:cardCornerRadius="7dp"
            android:elevation="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Subway sandwitch"
                    android:textSize="18sp"
                    android:padding="5dp"
                    android:textColor="@android:color/black"
                    android:id="@+id/name"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="123"
                    android:textSize="17sp"
                    android:padding="5dp"
                    android:gravity="right"
                    android:textColor="#000"
                    android:id="@+id/price"/>
            </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    android:layout_marginTop="2dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="OrderID:232"
                        android:padding="5dp"
                        android:textColor="@android:color/darker_gray"
                        android:id="@+id/orderid"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="105753"
                        android:padding="5dp"
                        android:gravity="right"
                        android:textColor="#800000"
                        android:id="@+id/orderid1"/>
                </LinearLayout>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2017-01-05 06:36:03"

                    android:padding="5dp"
                        android:textColor="@android:color/darker_gray"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/date"/>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    android:layout_marginTop="2dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="COMPLETED"
                    android:textSize="18sp"
                    android:padding="5dp"
                    android:textColor="#800000"
                    android:layout_margin="10dp"
                    android:id="@+id/status"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:cardBackgroundColor="#fff"
            app:cardCornerRadius="7dp"
            android:elevation="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bill Details:"
                    android:textSize="19sp"
                    android:padding="5dp"
                    android:textColor="#800000"
                    android:layout_margin="10dp"
                    android:id="@+id/textView" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"/>
               <com.panamon.paccozz.common.ExpandableHeightListView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:id="@+id/exlv"
                   android:layout_margin="10dp"
                   android:divider="@null"
                   android:dividerHeight="0dp"></com.panamon.paccozz.common.ExpandableHeightListView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.4"
                        android:text="Maxian Patty Salad   (2)"

                        android:padding="5dp"
                        android:textColor="#000"
                        android:id="@+id/name1"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="123"

                        android:padding="5dp"
                        android:gravity="right"
                        android:textColor="#000"
                        android:id="@+id/price1"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.4"
                        android:text="Maxian Patty Salad   (2)"
                        android:textSize="17sp"
                        android:padding="5dp"
                        android:textColor="#000"
                        android:id="@+id/name2"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="123"
                        android:textSize="17sp"
                        android:padding="5dp"
                        android:gravity="right"
                        android:textColor="#000"
                        android:id="@+id/price2"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.4"
                        android:text="Item Total"

                        android:padding="5dp"
                        android:textColor="#000"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="123"

                        android:padding="5dp"
                        android:gravity="right"
                        android:textColor="#000"
                        android:id="@+id/itemTotal"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.4"
                        android:text="VAT"
                        android:padding="5dp"
                        android:textColor="#000"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="123"
                        android:padding="5dp"
                        android:gravity="right"
                        android:textColor="#000"
                        android:id="@+id/vat"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.4"
                        android:text="Discount"

                        android:padding="5dp"
                        android:textColor="#000"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="123"

                        android:padding="5dp"
                        android:gravity="right"
                        android:textColor="#000"
                        android:id="@+id/discount"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.4"
                        android:text="Total Payable Amount"

                        android:padding="5dp"
                        android:textColor="#000"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="123"
                        android:padding="5dp"
                        android:gravity="right"
                        android:textColor="#000"
                        android:id="@+id/totalPayableAmount"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.4"
                        android:text="Package Mode"
                        android:textSize="17sp"
                        android:padding="5dp"
                        android:textColor="#000"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Take away"
                        android:textSize="17sp"
                        android:padding="5dp"
                        android:gravity="right"
                        android:textColor="#800000"
                        android:id="@+id/packageMode"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PaymentMode"
                    android:textSize="19sp"
                    android:padding="5dp"
                    android:textColor="#800000"
                    android:layout_margin="10dp"
                   android:id="@+id/paymentMode"/>
            </LinearLayout>



        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>



</RelativeLayout>
